{
  "name": "megaverse",
  "version": "1.0.0",
  "description": "Crossmint Megaverse Challenge",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "phase1": "node index.js",
    "phase2": "node index.js phase2",
    "reset": "node reset.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration",
    "test:unit": "jest --testPathIgnorePatterns=tests/integration",
    "test:full": "jest --coverage --verbose",
    "dry-run:phase1": "node -e \"const creator = require('./src/MegaverseCreator'); new creator().createPhase1Pattern(11, {dryRun: true}).then(console.log).catch(console.error)\"",
    "dry-run:phase2": "node -e \"const creator = require('./src/MegaverseCreator'); new creator().createPhase2Pattern({dryRun: true}).then(console.log).catch(console.error)\"",
    "validate": "node -e \"const creator = require('./src/MegaverseCreator'); new creator().validateGoalState().then(console.log).catch(console.error)\""
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
