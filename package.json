{
  "name": "megaverse",
  "version": "1.0.0",
  "description": "Crossmint Megaverse Challenge",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "phase1": "node index.js",
    "phase2": "node index.js phase2",
    "reset": "node reset.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/utils/Logger.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
